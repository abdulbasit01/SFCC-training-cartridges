<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <field formid="fname" parse-error="error.message.parse.fname.profile.form" label="label.input.firstname.profile" regexp="[a-zA-Z]+" mandatory="true" max-length="50" type="string" />

    <field formid="lname" parse-error="error.message.parse.fname.profile.form" label="label.input.lastname.profile" regexp="[a-zA-Z]+" mandatory="true" max-length="50" type="string" />

    <field formid="email" parse-error="error.message.parse.email.profile.form" label="label.input.email.profile" mandatory="true" max-length="50" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" type="string" />
</form>